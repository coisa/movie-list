{
    "name": "coisa/movie-list",
    "description": "A simple TMDB based movie overview application",
    "type": "application",
    "minimum-stability": "stable",
    "license": "MIT",
    "keywords": [
        "tmdb",
        "movies"
    ],
    "authors": [
        {
            "name": "Felipe Say√£o Lobato Abreu",
            "email": "github@felipeabreu.com.br"
        }
    ],
    "config": {
        "sort-packages": true,
        "process-timeout": 0
    },
    "require": {
        "php": "^7.3",
        "ext-json": "*",
        "cache/array-adapter": "^1.0",
        "cache/filesystem-adapter": "^1.0",
        "coisa/monolog": "1.0.x-dev",
        "fig/http-message-util": "^1.1",
        "nyholm/psr7": "^1.2",
        "psr/container": "^1.0",
        "psr/http-client": "^1.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "psr/log": "^1.1",
        "psr/simple-cache": "^1.0",
        "symfony/http-client": "^4.3",
        "thecodingmachine/safe": "^0.1.16",
        "zendframework/zend-config-aggregator": "^1.1",
        "zendframework/zend-diactoros": "^2.1",
        "zendframework/zend-expressive": "^3.2",
        "zendframework/zend-expressive-fastroute": "^3.0",
        "zendframework/zend-expressive-platesrenderer": "^2.2",
        "zendframework/zend-servicemanager": "^3.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "fzaninotto/faker": "^1.8",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "jangregor/phpstan-prophecy": "^0.4.2",
        "maglnet/composer-require-checker": "^2.0",
        "malukenho/docheader": "^0.1.7",
        "phpstan/phpstan": "^0.11.16",
        "phpunit/phpunit": "^8.4",
        "roave/security-advisories": "dev-master",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/var-dumper": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "CoiSA\\MovieList\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoiSA\\MovieList\\Test\\": "tests"
        }
    },
    "scripts": {
        "analyze": "phpstan analyze --level max ./src ./tests",
        "check": [
            "@cs-check",
            "@sniff",
            "@test",
            "@analyze"
        ],
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": [
            "php-cs-fixer fix",
            "phpcbf"
        ],
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "sniff": "phpcs",
        "test": "phpunit --colors=always"
    }
}
